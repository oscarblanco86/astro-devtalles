---
import type { PokemonDetail } from "../../interfaces/pokemon-list.response";
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props as Props;
const id = url.split("/").at(-2);
// const resp = await fetch(url)
// const data = await resp.json() as PokemonDetail
const imgUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/shiny/${id}.png`;
// const imgUrl = data.sprites.other?.["official-artwork"].front_default
---
<!-- href=`/pokemons/${name}` -->

<a
    href=`/pokemons/${name}`
    class={`rounded-4xl flex flex-col justify-center items-center p-2 ${!isBig && "border"}`}
>
    <img 
        src={imgUrl} 
        alt={name} 
        transition:name={`${name}-image`}
        class:list={[{
            'w-80 h-80': isBig,
            'w-10 h-10': !isBig,
        }]}
    />
    <span 
        class:list={[
            `capitalize`,
            { 'text-3xl': isBig }
            ]}
    >#{id} {name}</span>
</a>
