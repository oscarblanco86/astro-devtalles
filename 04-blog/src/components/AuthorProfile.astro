---
import type { CollectionEntry } from "astro:content";

interface Props {
    author: CollectionEntry<'author'>    
}
const {author} = Astro.props
// console.log(author)
---

<div
    class="max-w-lg mx-auto my-10 bg-white rounded-lg shadow-md p-5 author-card"
>
<div>
    <a href={`/blog/${author.id}`}>
        <img
            class="w-32 h-32 rounded-full mx-auto"
            src={author.data.avatar}
            alt="Profile picture"
        />
        <h2 class="text-center text-2xl font-semibold mt-3">{author.data.name}</h2>
    </a>
</div>
    <p class="text-center text-gray-800 mt-1">{author.data.subtitle}</p>
    <div class="flex justify-center mt-5">
        <a href={`https://x.com/${author.data.twitter}`} class="text-blue-500 hover:text-blue-700 mx-3">Twitter</a>
        <a href={author.data.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3">LinkedIn</a>
        <a href={author.data.github} class="text-blue-500 hover:text-blue-700 mx-3">GitHub</a>
    </div>
    <div class="mt-5">
        <h3 class="text-xl font-semibold text-gray-900">Bio</h3>
        <p class="text-lg leading-loose text-gray-700 dark:text-gray-700 mt-2">
            {author.data.bio}
        </p>
        <div class="flex justify-end">
            <a href="">Leer m√°s</a>
        </div>
    </div>
</div>

<style>
    @reference "../styles/global.css";
    .author-card p,
    h3 {
        @apply text-gray-900 dark:text-gray-900 my-2;
    }
</style>
