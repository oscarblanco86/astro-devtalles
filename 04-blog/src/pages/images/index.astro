---
import { Image } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";
import post05Img from '@images/post-05.png'
import { Picture } from "astro:assets";
---
<MainLayout title="ImÃ¡genes">
    <h1 class="text-5xl">Imagenes</h1>
    <img 
        src="/assets/images/post-05.png" 
        loading="eager"
        width="250" 
        height="250" 
        alt="Imagen de prueba"
    />
    <Image 
        src={post05Img}
        loading="eager"
        width="250" 
        height="250" 
        alt="Imagen de prueba"
    />
    <Image 
        src={post05Img}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Quality low</h1>
    <Image 
        src={post05Img}
        quality={"low"}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Quality mid</h1>
    <Image 
        src={post05Img}
        quality={"mid"}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Quality high</h1>
    <Image 
        src={post05Img}
        quality={"high"}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Quality max</h1>
    <Image 
        src={post05Img}
        quality={"max"}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Format avif</h1>
    <Image 
        src={post05Img}
        format="avif"
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <h1>Picture</h1>
    <Picture 
        src={post05Img}
        formats={['webp', 'avif', 'jpeg']}
        loading="eager"
        style={{
            width: '250px',
            height: '250px'
        }}
        width="500" 
        height="500" 
        alt="Imagen de prueba"
    />
    <div
        style={{
            height: '3000px'
        }}
    ></div>
    <img 
        src="/assets/images/post-01.png" 
        loading="lazy"
        width="250" 
        height="250" 
        alt="Imagen de prueba"
    />
</MainLayout>
<style>
    @reference "../../styles/global.css";
    h1 {
        @apply mt-10;
    }
</style>